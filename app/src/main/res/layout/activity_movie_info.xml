<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.project.movieapp.MovieInfoActivity">

    <LinearLayout
        android:id="@+id/idLLTop"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idMovieInfoPoster"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/idMovieInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/idMovieInfoRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/release"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/idMovieInfoReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/black" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/idMovieInfoOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idLLTop"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        />



</RelativeLayout>
